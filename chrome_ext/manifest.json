{
  "manifest_version": 3,
  "name": "Глаз Закона",
  "description": "Проверка информации на экстремистский контент по списку Минюста РФ",
  "version": "1.0",
  "homepage_url": "https://extremist-checker.com",
  "author": "Глаз Закона Team",
  "icons": {
    "128": "extr_logo_eye_2.png"
  },
  "permissions": ["activeTab", "storage", "scripting"],
  "host_permissions": ["*://*.google.com/*", "*://*.yandex.ru/*", "*://*.bing.com/*", "*://*.duckduckgo.com/*", "https://api.extremist-checker.com/*"],
  "background": {"service_worker": "background.js"},
  "content_scripts": [{
    "matches": ["*://*.google.com/*", "*://*.yandex.ru/*", "*://*.bing.com/*", "*://*.duckduckgo.com/*"],
    "js": ["content.js"],
    "css": ["styles.css"],
    "run_at": "document_end"
  }],
  "action": {
    "default_popup": "popup.html"
  }
}