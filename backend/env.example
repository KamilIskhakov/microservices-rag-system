# Основные настройки сервера
HOST=0.0.0.0
PORT=8000
DEBUG=false

# Пути к моделям и данным
QWEN_MODEL_PATH=models/qwen-model
FAISS_INDEX_PATH=data/index.faiss
FAISS_META_PATH=data/index.faiss.meta
VECTOR_DIM=384

# Настройки безопасности
RATE_LIMIT_PER_MINUTE=60
LOG_SENSITIVE_DATA=false

# Настройки логирования
LOG_LEVEL=INFO
LOG_FILE=logs/rag_service.log
ERROR_LOG_FILE=logs/errors.log

# CORS настройки
ALLOWED_ORIGINS=["http://localhost:3000", "chrome-extension://*"]

# Настройки модели
RELEVANCE_THRESHOLD=0.3
CONFIDENCE_THRESHOLD=0.7

# Настройки обновления БД
UPDATE_INTERVAL_HOURS=24
MAX_UPDATE_ERRORS=3

# ЮKassa настройки (замените на реальные)
YOOKASSA_SHOP_ID=your_shop_id
YOOKASSA_SECRET_KEY=your_secret_key

# Настройки HTTPS (опционально)
USE_HTTPS=false
SSL_CERT_PATH=
SSL_KEY_PATH= 